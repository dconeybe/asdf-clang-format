#!/usr/bin/env bash

set -euo pipefail

readonly run_plugin_sh_path="$(dirname "${BASH_SOURCE[0]}")/run_plugin.sh"

readonly args=(
  "${run_plugin_sh_path}"
  "--quiet"
  download
  "--clang-format-version=$ASDF_INSTALL_VERSION"
  "--download-dir=$ASDF_DOWNLOAD_PATH"
  "--llvm-release-keys-file=$plugin_dir/release-keys.asc"
  "$@"
)

exec "${args[@]}"
